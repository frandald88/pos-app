{
  "name": "tupos-saas",
  "version": "2.0.0",
  "description": "POS SaaS para negocios - Multi-tenant",
  "private": true,
  "workspaces": [
    "apps/api",
    "apps/app",
    "apps/landing"
  ],
  "scripts": {
    "install:all": "npm install && npm install --workspaces",
    "dev": "concurrently \"npm run dev:api\" \"npm run dev:app\"",
    "dev:all": "concurrently \"npm run dev:api\" \"npm run dev:app\" \"npm run dev:landing\"",
    "dev:api": "cd apps/api && npm run dev",
    "dev:app": "cd apps/app && npm start",
    "dev:landing": "cd apps/landing && npm start",
    "build": "npm run build:app && npm run build:landing && npm run build:api",
    "build:api": "cd apps/api && npm run build",
    "build:app": "cd apps/app && npm run build",
    "build:landing": "cd apps/landing && npm run build",
    "start": "cd apps/api && npm start",
    "test": "npm run test --workspaces"
  },
  "devDependencies": {
    "concurrently": "^9.2.0"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  }
}
