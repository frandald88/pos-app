{
  "name": "astrodish-print-server",
  "version": "1.0.0",
  "description": "Servidor local para impresión directa en impresoras térmicas",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "build:win": "pkg server.js --targets node18-win-x64 --output dist/AstrodishPrintServer-win.exe",
    "build:mac": "pkg server.js --targets node18-macos-x64 --output dist/AstrodishPrintServer-mac",
    "build:linux": "pkg server.js --targets node18-linux-x64 --output dist/AstrodishPrintServer-linux",
    "build:all": "npm run build:win && npm run build:mac && npm run build:linux"
  },
  "keywords": [
    "thermal-printer",
    "pos",
    "print-server"
  ],
  "author": "Astrodish",
  "license": "MIT",
  "bin": "server.js",
  "pkg": {
    "assets": [
      "node_modules/**/*"
    ],
    "targets": [
      "node18-win-x64",
      "node18-macos-x64",
      "node18-linux-x64"
    ],
    "outputPath": "dist"
  },
  "dependencies": {
    "express": "^4.18.2",
    "cors": "^2.8.5",
    "node-thermal-printer": "^4.4.5",
    "escpos": "^3.0.0-alpha.6",
    "escpos-usb": "^3.0.0-alpha.4"
  },
  "devDependencies": {
    "nodemon": "^3.0.1",
    "pkg": "^5.8.1"
  }
}
